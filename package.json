{
    "name": "gulp-tasks-monorepo",
    "version": "0.5.0",
    "description": "Tool for running gulp tasks against multiple packages",
    "main": "lib/index.js",
    "scripts": {
        "lint": "eslint -c ./.eslintrc.json src",
        "test": "npm run lint && cross-env NODE_ENV=test mocha",
        "cover": "nyc npm run test",
        "coveralls": "nyc report --reporter=text-lcov | coveralls",
        "clean": "rimraf lib",
        "build": "npm run test && npm run clean && babel src --out-dir lib",
        "prepublish": "npm run build",
        "fmt": "pretty-quick"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ziflex/gulp-tasks-monorepo.git"
    },
    "keywords": [
        "gulp",
        "mono-repo",
        "toolkit"
    ],
    "author": "Tim Voronov <ziflex@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ziflex/gulp-tasks-monorepo/issues"
    },
    "homepage": "https://github.com/ziflex/gulp-tasks-monorepo#readme",
    "dependencies": {
        "bluebird": "^3.7.2",
        "chalk": "^3.0.0",
        "end-of-stream": "^1.4.4",
        "es6-symbol": "^3.1.3",
        "glob": "^7.1.6",
        "gulp": "^4.0.2",
        "lodash": "^4.17.15",
        "nyc": "^15.0.0",
        "piperline": "^0.4.0",
        "run-sequence": "^2.2.1",
        "stream-consume": "^0.1.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.7.7",
        "@babel/core": "^7.7.7",
        "@babel/preset-env": "^7.7.7",
        "@babel/register": "^7.7.7",
        "@istanbuljs/nyc-config-babel": "^3.0.0",
        "babel-eslint": "^10.0.3",
        "babel-plugin-istanbul": "^6.0.0",
        "chai": "^4.2.0",
        "coveralls": "^3.0.9",
        "cross-env": "^6.0.3",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-mocha": "^6.2.2",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^3.1.0",
        "mocha": "^6.2.2",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1",
        "rimraf": "^3.0.0",
        "sinon": "^8.0.2"
    }
}
