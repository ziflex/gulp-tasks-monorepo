{
  "name": "gulp-tasks-monorepo",
  "version": "0.1.4",
  "description": "Tool for running gulp tasks against multiple packages",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint -c ./.eslintrc.json src",
    "test": "npm run lint && mocha --reporter spec --compilers js:babel-register --recursive test",
    "cover": "istanbul cover _mocha -- --compilers js:babel-register --recursive",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js  && rm -rf ./coverage",
    "clean": "rimraf lib",
    "build": "npm run test && npm run clean && babel src --out-dir lib",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ziflex/gulp-tasks-monorepo.git"
  },
  "keywords": [
    "gulp",
    "mono-repo",
    "toolkit"
  ],
  "author": "Tim Voronov <ziflex@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ziflex/gulp-tasks-monorepo/issues"
  },
  "homepage": "https://github.com/ziflex/gulp-tasks-monorepo#readme",
  "dependencies": {
    "bluebird": "^3.4.6",
    "end-of-stream": "^1.1.0",
    "es6-symbol": "^3.0.2",
    "glob": "^7.0.6",
    "gulp": "^3.9.1",
    "gulp-util": "^3.0.7",
    "lodash": "^4.16.6",
    "piperline": "^0.3.3",
    "run-sequence": "^1.2.2",
    "stream-consume": "^0.1.0"
  },
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-eslint": "^6",
    "babel-plugin-transform-node-env-inline": "^6",
    "babel-preset-es2015": "^6",
    "babel-preset-stage-0": "^6",
    "babel-register": "^6.7.2",
    "chai": "^3.5.0",
    "chalk": "^1.1.1",
    "coveralls": "^2.11.14",
    "cross-env": "^3.0.0",
    "eslint": "^3",
    "eslint-config-airbnb": "^11",
    "eslint-plugin-import": "^1",
    "eslint-plugin-jsx-a11y": "^2",
    "eslint-plugin-mocha": "^4",
    "istanbul": "^1.0.0-alpha",
    "mocha": "^3.1.0",
    "sinon": "^1.17.6"
  }
}
